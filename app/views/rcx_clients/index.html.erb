<h2>My Clients</h2>

<div class="last-update">
	Last Update: 
	<% if @rcx_clients.fetching? %>
		In Progress
	<% else %>
		<% last_update = current_user.clients_update_started_at.nil? ? "Never" : current_user.clients_update_finished_at %>
		<%= last_update %> <%= button_to 'Update Now', '/rcx_clients', method: :post %>
	<% end %>
</div>

<%= render 'rcx_clients_list', rcx_clients: @rcx_clients %>