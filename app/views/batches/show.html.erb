<h2><%= @batch.name %></h2>
<div class="attribute">
	<div class="attribute-name">Status</div>
	<div class="attribute-value"><%= batch_status_for(@batch) %></div>
</div>
<div class="attribute">
	<div class="attribute-name">Last Updated</div>
	<div class="attribute-value"><%= @batch.updated_at %></div>
</div>
<h3>Clients</h3>
<%= render 'rcx_clients/rcx_clients_list', rcx_clients: @batch.rcx_clients, batch: @batch %>

<h3>Commands</h3>
<%= render 'batch_commands/steps_list', batch_commands: @batch.batch_commands %>
