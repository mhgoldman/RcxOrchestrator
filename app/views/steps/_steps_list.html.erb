<p id="no_steps_msg"<%= ' style="display: none;"'.html_safe if steps.any? %>>There are no commands.</p>
<table class="table" id="commands_table" <%= ' style="display: none;"'.html_safe unless steps.any? %>>
	<thead>
		<tr>
			<th>Index</th>
			<th>Command</th>
			<% unless defined?(statuses) && !statuses %>
				<th>Status</th>
			<% end %>
		</tr>
	</thead>
	<tbody>
		<% steps.each do |step| %>
			<tr>
				<td><%= step.index %></td>
				<td><%= link_to step.command.name, step.command %></td>
				<% unless defined?(statuses) && !statuses %>
					<td><%= link_to step_status_for(step), client_steps_path(step_id: step) %></td>
				<% end %>
			</tr>
		<% end %>
	</tbody>
</table>